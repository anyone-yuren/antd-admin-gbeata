{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@gbeata/ts-config/node.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "types/*.ts",
    ".eslintrc.cjs",
    "tailwind.config.ts",
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
