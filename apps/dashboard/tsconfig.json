{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@gbeata/ts-config/react-app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vite/client", "vite-plugin-svg-icons/client"],
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["types/*"],
      "#/mock/*": ["mock/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "typings/**/*.d.ts",
    "typings/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "vite.config.ts",
    "types/*.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
